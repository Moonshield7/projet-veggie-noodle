{% extends "base.html.twig" %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    <div class="bg log">

        <h1>Créer un compte</h1>

        <div class="container-form">
            
            {{form_start(form)}}

            <div class="form-group">
                {{form_row(form.email)}}
            </div>
            <div class="form-group">
                {{form_row(form.password)}}
            </div>

            <div class="form-group">
                {{form_row(form.name)}}
            </div>
            <div class="form-group">
                {{form_row(form.phoneNumber)}}
            </div>

            {{form_end(form)}}
        </div>

    </div>

{% endblock %}
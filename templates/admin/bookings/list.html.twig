{% extends "base.html.twig" %}

{% block title %}Gérer les réservations{% endblock %}

{% block body %}

<div class="bg admin">

    <h1>Liste des réservations</h1>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Date de réservation</th>
                    <th>Utilisateur</th>
                    <th>Nombre de clients</th>
                    <th>Créé le</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>

                {% for booking in bookings %}

                    <tr>
                        <th> {{booking.id}} </th>
                        <td>{{booking.date | date("d/m/Y")}}</td>
                        <td>{{booking.user.username}}</td>
                        <td>{{booking.nbCustomers}}</td>
                        <td>{{booking.createdAt | date("d/m/Y") }}</td>
                        <td><a href="{{ path('app_admin_booking_delete', {'id': booking.id}) }}"><span class="hide"> Supprimer</span> <i class="fa-solid fa-trash"></i></a></td>
                    </tr>

                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}